@page
@model EmployeeHealth.Web.Pages.ExerciseLogsModel
<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>บันทึกออกกำลัง - EmployeeHealth</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
<div class="min-h-screen bg-gray-50">
  <div class="flex">
    <aside class="w-64 bg-white p-6 border-r">
      <div class="font-bold text-blue-600 mb-6 text-xl">HEALTHPLUS</div>
      <nav class="space-y-2 text-sm">
        <a class="block px-3 py-2 text-gray-500 hover:text-gray-700" href="/Dashboard">แดชบอร์ด</a>
        <a class="block px-3 py-2 bg-blue-500 text-white rounded shadow" href="/ExerciseLogs">บันทึกออกกำลัง</a>
        <a class="block px-3 py-2 text-gray-500 hover:text-gray-700" href="/KpiResults">ผลลัพธ์ KPI</a>
        <a class="block px-3 py-2 text-gray-500 hover:text-gray-700" href="/Profile">โปรไฟล์ของฉัน</a>
      </nav>
    </aside>

    <main class="flex-1 p-8">
      <div class="grid grid-cols-4 gap-6">
        <div class="col-span-3">
          <div class="p-6 bg-white rounded-lg shadow mb-6">
            <div class="flex items-center justify-between mb-6">
              <h2 class="text-2xl font-bold">ประวัติการออกกำลัง</h2>
              <a href="/Dashboard" class="text-blue-600 hover:text-blue-800 text-sm">+ เพิ่มกิจกรรม</a>
            </div>

            <div class="overflow-x-auto">
              <table class="w-full text-sm">
                <thead>
                  <tr class="border-b">
                    <th class="text-left py-3 px-4 font-semibold text-gray-600">วันที่</th>
                    <th class="text-left py-3 px-4 font-semibold text-gray-600">กิจกรรม</th>
                    <th class="text-left py-3 px-4 font-semibold text-gray-600">ระยะเวลา</th>
                    <th class="text-left py-3 px-4 font-semibold text-gray-600">ระยะทาง</th>
                    <th class="text-left py-3 px-4 font-semibold text-gray-600">อัตราเต้น</th>
                    <th class="text-left py-3 px-4 font-semibold text-gray-600">ความดัน</th>
                    <th class="text-left py-3 px-4 font-semibold text-gray-600">สถานะ</th>
                  </tr>
                </thead>
                <tbody>
                  @if (Model.ExerciseLogs != null && Model.ExerciseLogs.Any())
                  {
                    @foreach (var log in Model.ExerciseLogs.Take(10))
                    {
                      <tr class="border-b hover:bg-gray-50">
                        <td class="py-3 px-4">@log.LogDate.ToString("yyyy-MM-dd")</td>
                        <td class="py-3 px-4">@log.ActivityName</td>
                        <td class="py-3 px-4">@log.DurationMin นาที</td>
                        <td class="py-3 px-4">@(log.DistanceKm.HasValue ? $"{log.DistanceKm} km" : "-")</td>
                        <td class="py-3 px-4">@(log.HeartRate.HasValue ? $"{log.HeartRate} bpm" : "-")</td>
                        <td class="py-3 px-4">@(string.IsNullOrEmpty(log.BloodPressure) ? "-" : log.BloodPressure)</td>
                        <td class="py-3 px-4">
                          <span class="px-2 py-1 text-xs rounded @(log.Status == "Approved" ? "bg-green-100 text-green-700" : log.Status == "Rejected" ? "bg-red-100 text-red-700" : "bg-yellow-100 text-yellow-700")">
                            @log.Status
                          </span>
                        </td>
                      </tr>
                    }
                  }
                  else
                  {
                    <tr>
                      <td colspan="7" class="py-3 px-4 text-center text-gray-500">
                        ไม่มีข้อมูลการออกกำลัง
                      </td>
                    </tr>
                  }
                </tbody>
              </table>
            </div>

            <div class="mt-4 text-center text-sm text-gray-500">
              @if (Model.ExerciseLogs != null && Model.ExerciseLogs.Any())
              {
                @($"แสดง {Math.Min(10, Model.ExerciseLogs.Count)} จาก {Model.ExerciseLogs.Count} รายการ")
              }
              else
              {
                <span>ไม่มีข้อมูล</span>
              }
            </div>
          </div>
        </div>

        <aside class="p-6">
          <div class="p-4 bg-blue-50 rounded-lg shadow">
            <div class="text-sm font-semibold text-gray-600 mb-3">สรุปการออกกำลัง</div>
            <div class="space-y-3">
              <div>
                <div class="text-xs text-gray-500">ครั้งที่ออกกำลัง</div>
                <div class="text-2xl font-bold text-blue-600">@Model.TotalLogs</div>
              </div>
              <div>
                <div class="text-xs text-gray-500">นาทีทั้งหมด</div>
                <div class="text-2xl font-bold text-blue-600">@Model.TotalMinutes</div>
              </div>
              <div>
                <div class="text-xs text-gray-500">เวลาเฉลี่ย</div>
                <div class="text-2xl font-bold text-blue-600">@(Model.AverageMinutes > 0 ? $"{Model.AverageMinutes} นาที" : "-")</div>
              </div>
            </div>
          </div>
        </aside>
      </div>
    </main>
  </div>
</div>
</body>
</html>
